---
import "@fortawesome/fontawesome-free/css/all.css";

export interface Props {
  title: string;
  headerTitle?: string;
  linkHome?: boolean;
}

const { title, headerTitle, linkHome } = Astro.props;
let baseUrl = (import.meta.env.BASE_URL as string) || "";

if (!baseUrl.endsWith("/")) {
  baseUrl = baseUrl + "/";
}
---

<!doctype html>
<html lang="en">
  <head>
    <base href={baseUrl} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{headerTitle}</title>
  </head>
  <body
    class={`
      relative
    `}
  >
    <header
      class={`
        before:absolute
        before:backdrop-blur
        before:content['']
        before:inset-0
        before:z-[-1]
        bg-black-alpha-60
        relative
      `}
    >
      <slot name="header">
        <div
          class={`
            block
            font-bold
            p-4
            text-[1.6rem]
            text-center
          `}
        >
          {
            linkHome ? (
              <a href={baseUrl}>{headerTitle || title}</a>
            ) : (
              headerTitle || title
            )
          }
        </div>
        <slot name="header-post-title" />
      </slot>
    </header>
    <div
      class={`
        content
        relative
      `}
      f-client-nav="true"
    >
      <slot />
    </div>
    {
      (() => {
        const content = (
          <>
            <p>Beat Saber render by Pixelguy</p>
            <p>
              <a href="generator/">Mod JSON Generator</a>
            </p>
          </>
        );

        return (
          <>
            <footer
              class={`
                invisible
                p-4
              `}
            >
              {content}
            </footer>
            <footer
              class={`
                absolute
                before:absolute
                before:backdrop-blur
                before:content['']
                before:inset-0
                before:z-[-1]
                bg-black-alpha-60
                bottom-0
                left-0
                p-4
                right-0
                t-center
                text-center
              `}
            >
              {content}
            </footer>
          </>
        );
      })()
    }
  </body>
</html>
<style is:global>
  html,
  body {
    display: block;
    min-height: 100vh;
  }
  body {
    position: relative;

    &:before,
    &:after {
      content: "";
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 100vw;
      z-index: -100;
    }

    &:before {
      background-color: #000;
    }

    &:after {
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      background-image: url("/images/pixelguy.jpg");
      opacity: 0.7;
    }
  }
</style>

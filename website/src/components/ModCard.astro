---
import { Mod } from "../../../shared/types/Mod";
import BottomAnchor from "./BottomAnchor.astro";
import { encode } from "html-entities";

export interface Props {
  /**
   * All the versions of the mod for this game version.
   */
  mods: Mod[];
}

const { mods } = Astro.props as Props;
---

{
  (() => {
    const mod = mods[0];

    return (
      <div
        class={`
          before:absolute
          before:backdrop-blur
          before:content['']
          before:inset-2
          before:overflow-hidden
          before:rounded-lg
          before:z-[-1]
          flex
          flex-col
          p-2
          relative
          w-full
          sm:w-1/2
          md:w-1/3
          lg:w-1/4
          xl:w-1/5
          xxl:w-1/6
          xxxl:w-[12.5%]
        `}
      >
        <div
          class={`
            bg-black-alpha-50
            block
            dark:bg-dark-header-footer
            overflow-hidden
            relative
            rounded-t-lg
            w-full
          `}
          style="padding-bottom: calc(100% / 178 * 100);"
        >
          <div
            class={`
              absolute
              flex
              h-full
              inset-0
              items-center
              justify-center
              w-full
            `}
          >
            <img
              class={`
                h-screen
                inline-block
                max-h-full
                max-w-full
              `}
              alt={`${mod.name} v${mod.version}`}
              src={mod.cover != null ? mod.cover : `images/image-missing.svg`}
            />
          </div>
        </div>
        <div
          class={`
            bg-white-alpha-70
            dark:bg-dark-card
            dark:text-white
            flex-grow
            relative
            rounded-b-lg
          `}
        >
          <div
            class={`
              block
              break-words
              p-4
            `}
          >
            <div
              class={`
                font-semibold
              `}
            >
              {mod.name}
              <span
                class={`
                  pl-1
                  text-[.6em]
                `}
              >
                v{mod.version}
              </span>
            </div>
            <div
              class={`
                italic
                text-[.7em]
              `}
            >
              {mod.author}
            </div>
            {mod.description ? (
              <span
                class={`
                  text-sm
                  whitespace-pre-line
                `}
                set:html={encode(mod.description)
                  .replace(/\n/g, "&#10;")
                  .replace(/\r/g, "")}
              />
            ) : null}
          </div>
          {(() => {
            const buttons = [];
            if (mod.download) {
              buttons.push(
                <div class="join mx-2">
                  <a
                    href={mod.download}
                    class={`
                      btn
                      btn-primary
                      btn-sm
                      join-item
                      rounded-lg
                      text-white
                    `}
                  >
                    Download
                  </a>
                  {mods.length > 1 ? (
                    <details class="join-item dropdown">
                      <summary
                        class={`
                            border-l
                            border-l-white-alpha-20
                            btn
                            btn-primary
                            btn-sm
                            cursor-pointer
                            h-[100%]
                            hover:border-l-white-alpha-20
                            px-2.5
                            rounded-r-lg
                          `}
                      >
                        <i
                          class={`
                              fa-caret-down
                              fa-solid
                              text-[0.7em]
                            `}
                        />
                      </summary>
                      <ul
                        class={`
                            -translate-x-1/2
                            backdrop-blur
                            bg-white-alpha-70
                            dark:bg-dark-header-footer
                            dark:text-white
                            dropdown-content
                            left-1/2
                            mt-1
                            p-2
                            rounded-lg
                            shadow
                            text-black
                            top-[100%]
                            w-52
                            z-[1]
                          `}
                      >
                        {mods.map((mod) => (
                          <li
                            class={`
                                dark:hover:bg-white-alpha-10
                                hover:bg-black-alpha-10
                                rounded-md
                              `}
                          >
                            <a
                              class={`
                                  block
                                  px-4
                                  py-2
                                `}
                              href={mod.download}
                            >
                              {mod.version}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </details>
                  ) : null}
                </div>,
              );
            }

            if (mod.source) {
              buttons.push(
                <a
                  href={mod.source}
                  class={`
                    btn
                    btn-primary
                    btn-sm
                    rounded-lg
                    text-white
                  `}
                >
                  Source Code
                </a>,
              );
            }

            return (
              <BottomAnchor>
                <div
                  class={`
                    ml-2
                    pb-4
                  `}
                >
                  <div
                    class={`

                    `}
                  >
                    {buttons}
                  </div>
                </div>
              </BottomAnchor>
            );
          })()}
        </div>
      </div>
    );
  })()
}

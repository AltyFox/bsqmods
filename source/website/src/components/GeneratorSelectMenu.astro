---
export interface Props {
  id: string;
  values: [string, string, boolean][];
}

const { id, values } = Astro.props as Props;
---

<div
  class={`
    block
    text-center
  `}
>
  <span
    class={`
      block
      font-bold
      leading-normal
      py-1
      text-shadow
      text-white
    `}
  >
    <slot />
  </span>
  <select
    class={`
      backdrop-blur
      bg-input-bg
      border
      border-white-alpha-20
      h-[42px]
      max-w
      my-1
      p-2
      placeholder-input-placeholder
      rounded-md
      text-input-text
      w-full
    `}
    id={id}
  >
    {
      values?.map((value) => (
        <option
          value={value[0]}
          selected={value[2] ? "selected" : null}
        >
          {value[1]}
        </option>
      ))
    }
  </select>
</div>
<style>
  span {
    text-shadow: 0px 0px 4px rgba(0, 0, 0, 1);
  }
</style>

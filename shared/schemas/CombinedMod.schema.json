{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "CombinedMod.schema.json",
  "type": "object",
  "allOf": [
    {
      "$ref": "Mod.schema.base.json"
    },
    {
      "type": "object",
      "properties": {
        "name": {},
        "description": {},
        "id": {},
        "version": {},
        "author": {},
        "authorIcon": {},
        "modloader": {},
        "download": {},
        "source": {},
        "cover": {},
        "funding": {},
        "website": {},
        "hash": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{40}$"
        }
      },
      "required": [
        "hash"
      ],
      "additionalProperties": false
    }
  ]
}
